@model IEnumerable<DevLexicon.Models.TechTerm>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-3">
	<a class="button-default" asp-action="Create">Create New</a>

	<form asp-action="Index" method="get" class="form-inline mb-0" style="min-width: 200px !important;">
		<div class="form-group mb-2 mb-sm-0">
			<input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Enter a name or category" />
		</div>
		<button type="submit" class="btn btn-primary mt-1 ml-2">Search</button>
		<a asp-action="Index" class="btn btn-secondary mt-1 ml-2">Clear</a>
	</form>
</div>

<table class="table table-dark table-bordered align-middle">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Definition)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Category)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DocumentationLink)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Definition)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Category)
				</td>
				<td>
					@if (!string.IsNullOrEmpty(item.DocumentationLink))
					{
						<a href="@item.DocumentationLink" target="_blank">@item.DocumentationLink</a>
					}
				</td>
				<td width="170px">
					<div class="td-row">
						<a class="button-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
						<a class="button-details" asp-action="Details" asp-route-id="@item.Id">Details</a>
						<a class="button-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
